<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout" 
    android:layout_width="match_parent"  
    android:layout_height="match_parent"         
    android:scrollbars="horizontal|vertical"    
    android:layout_marginTop="5dip"     
    android:scrollbarStyle="outsideInset"
    android:fillViewport="true"> 

<RelativeLayout 
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shsoft.apt4us.MainActivity$PlaceholderFragment" >

		    <TableLayout
		        android:id="@+id/TableLayout_List"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        >
		
		        <TableRow
		            android:id="@+id/tableRow1"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content" >
		            
		            <TextView
		                android:id="@+id/ColumnName1"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textStyle="bold"
		                android:textSize="18sp"
		                android:textColor="#fad06e"
		                android:layout_weight="4"
		                 />
		
		            <TextView
		                android:id="@+id/ColumnName2"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textStyle="bold"
		                android:textSize="18sp"
		                android:textColor="#fad06e"
		                android:layout_weight="2"
		                />
		            
		            <TextView
		                android:id="@+id/ColumnName3"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textStyle="bold"
		                android:textSize="18sp"
		                android:textColor="#fad06e"
		                android:layout_weight="2"/>
		            
		            <TextView
		                android:id="@+id/ColumnName4"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:textStyle="bold"
		                android:textSize="18sp"
		                android:textColor="#fad06e"
		                 android:layout_weight="2"/>
		        
		        </TableRow>
		
		    </TableLayout>
		    </RelativeLayout>
 <!-- 		</HorizontalScrollView> -->
	</ScrollView>
